{
  "compilerOptions": {
    "target": "ES2019",
    "module": "ES6",
    "lib": [
      "ESNext",
      "ESNext.AsyncIterable",
      "DOM"
    ],
    "declaration": true,
    "sourceMap": true,
    "baseUrl": "./",
    "strict": true,
    "noEmit": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
  },
  "exclude": [
    "./bili.config.ts"
  ],
  "include": [
    "./src/**.ts"
  ]
}
